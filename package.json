{
  "name": "admin-next",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "prepare": "npx husky install",
    "lint": "eslint",
    "// === VITEST (r√°pido, sin servidor) ===": "",
    "vitest": "vitest",
    "vitest:run": "vitest run",
    "vitest:cov": "vitest run --coverage",
    "vitest:ui": "vitest --ui",
    "// === PLAYWRIGHT (necesita servidor) ===": "",
    "pw": "playwright test",
    "pw:unit": "playwright test --project=pw:unit",
    "pw:api": "playwright test --project=pw:api",
    "pw:component": "playwright test --project=pw:component",
    "pw:integration": "playwright test --project=pw:integration",
    "pw:e2e": "playwright test --project=pw:e2e",
    "pw:performance": "playwright test --project=pw:performance",
    "pw:cov": "nyc --silent playwright test",
    "// === COMBINADOS ===": "",
    "test:check": "npm run vitest:cov && npm run pw:cov && npm run perf && npm run perf:check",
    "test:cov": "npm run vitest:cov && npm run pw:cov",
    "test:all": "npm run vitest:run && npm run pw",
    "// === LEGACY (deprecar gradualmente) ===": "",
    "test": "playwright test",
    "test:unit": "playwright test --project=pw:unit --project=pw:api",
    "test:server": "playwright test --project=pw:component --project=pw:integration",
    "test:e2e": "playwright test --project=pw:e2e",
    "test:perf": "playwright test --project=pw:performance",
    "// === LHCI ===": "",
    "perf": "lhci autorun --config=lighthouserc.perf.json",
    "perf:check": "node scripts/check-perf-thresholds.js",
    "// === OTROS ===": "",
    "lh:home": "npx lighthouse http://localhost:3000/es --output=json --output=html --output-path=./docs/lighthouse-reports/home.html --chrome-flags='--headless' --no-enable-error-reporting",
    "lhci:strict": "lhci autorun --config=lighthouserc.strict.json"
  },
