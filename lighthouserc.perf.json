{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/es",
        "http://localhost:3000/es/gradients",
        "http://localhost:3000/ca",
        "http://localhost:3000/en",
        "http://localhost:3000/de"
      ],
      "numberOfRuns": 1,
      "chromeFlags": "--headless --incognito"
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.4 }],
        "categories:accessibility": ["error", { "minScore": 0.8 }],
        "categories:seo": ["error", { "minScore": 0.8 }],
        "categories:best-practices": ["error", { "minScore": 0.8 }],

        "first-contentful-paint": ["warn", { "maxNumericValue": 3000 }],
        "largest-contentful-paint": ["warn", { "maxNumericValue": 4000 }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.25 }],
        "total-blocking-time": ["warn", { "maxNumericValue": 600 }],
        "speed-index": ["warn", { "maxNumericValue": 5000 }],
        
        "interactive": "off",
        "max-potential-fid": "off",
        
        "uses-optimized-images": "warn",
        "modern-image-formats": "warn",
        "offscreen-images": "off",
        "render-blocking-resources": "off",
        "unused-javascript": "off",
        "unused-css-rules": "off",
        "server-response-time": ["warn", { "maxNumericValue": 1000 }],

        "bf-cache": "off",
        "legacy-javascript-insight": "off",
        "forced-reflow-insight": "off",
        "network-dependency-tree-insight": "off",
        "document-title": "off",
        "meta-description": "off",
        "button-name": "off"
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./docs/lighthouse-reports/perf"
    }
  }
}
